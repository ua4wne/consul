consul {
    address = "localhost:8500"

    retry {
        enabled = true
        attempts = 12
        backoff = "250ms"
    }
}
template {
    source      = "/etc/nginx/conf.d/load-balancer.conf.tmp"
    destination = "/etc/nginx/conf.d/load-balancer.conf"
    perms       = 0600
    command     = "nginx -s reload"
}